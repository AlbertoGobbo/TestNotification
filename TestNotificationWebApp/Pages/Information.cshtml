@page
@model InformationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Information";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<div class="text-left border-space">This page shows the main details about the registered device actually to Azure Hub Notification.</div>

<!-- Added inline styles because only in this block doesn't work CSS-->
<div class="div-table" style="overflow-x: auto">
    <table style="width: 100%">
        <tr class="title-table" style="border-bottom: 1px solid #ddd; height: 3em;">
            <th style="text-align: center;">Number</th>
            <th style="text-align: center;">RegistrationId</th>
            <th style="text-align: center;">Tags</th>
            <th style="text-align: center;">ExpirationTime</th>
        </tr>
        @for (int i = 0; i < Model.TotalRegistration; i++)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="text-align: center;">@(i+1)</td>
                <td style="text-align: center;">@Model.Data[i].RegistrationId</td>
                <td style="text-align: center;">
                    @for (int j = 0; j < Model.Data[i].Tags.Length && Model.Data[i].Tags[j] != null; j++)
                    {
                        <div><span>- </span>@Model.Data[i].Tags[j]</div>
                    }
                </td>
                <td style="text-align: center;">@Model.Data[i].ExpirationTime</td>
            </tr>
        }
    </table>
</div>



